    {{!-- LOGIN FUNCTIONALITY --}}


    <form class="login-form" method="POST" action="/login">
        {{#if indexMessageError}}
        <div class="errors">
            <p>{{indexMessageError}}</p>
        </div>
        {{/if}}
        <h1>Login</h1>
        <div></div>
        <input type="text" placeholder="username" name="username" maxlength="20" required>
        <input type="password" placeholder="password" name="password" maxlength="20" required>
        <button type="submit">Submit</button>
    </form>



    <!-- <div class="skyline"></div> -->

    <div class="batman">
